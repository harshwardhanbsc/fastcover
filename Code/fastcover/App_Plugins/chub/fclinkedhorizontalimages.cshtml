    String link6 = (Model != null && Model.links != null && Model.links.link6 != null) ? Model.links.link6.url : null;

    var i = 0;
    foreach (var item in Model.value.images)
    {
        i++;
    }
    string width = Convert.ToString((100 / i) - 1.66) + "%";
    if (i >= 6)
    {
        width = "15%";
    }
