    String description2 = (Model.value != null) ? Model.value.image2description : null;
    String description3 = (Model.value != null) ? Model.value.image3description : null;
    String description4 = (Model.value != null) ? Model.value.image4description : null;
    String description5 = (Model.value != null) ? Model.value.image5description : null;
    String description6 = (Model.value != null) ? Model.value.image6description : null;
    String link1 = (Model != null && Model.links != null && Model.links.link1 != null) ? Model.links.link1.url : null;
    String link2 = (Model != null && Model.links != null && Model.links.link2 != null) ? Model.links.link2.url : null;
