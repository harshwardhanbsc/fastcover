@inherits Umbraco.Web.Mvc.UmbracoViewPage<dynamic>
@{
    String img1 = (Model.value != null && Model.value.images != null && Model.value.images.lefttopimage != null) ? Model.value.images.lefttopimage.image : "";
    String img2 = (Model.value != null && Model.value.images != null && Model.value.images.righttopimage != null) ? Model.value.images.righttopimage.image : "";
    String img3 = (Model.value != null && Model.value.images != null && Model.value.images.leftbottomimage != null) ? Model.value.images.leftbottomimage.image : "";
    String img1AltText = (Model.value != null && Model.value.images != null && Model.value.images.lefttopimage != null) ? Model.value.images.lefttopimage.altText : "";
    String img2AltText = (Model.value != null && Model.value.images != null && Model.value.images.lefttopimage != null) ? Model.value.images.lefttopimage.altText : "";
    String img3AltText = (Model.value != null && Model.value.images != null && Model.value.images.leftbottomimage != null) ? Model.value.images.leftbottomimage.altText : "";
}
<div class="headingorangebarcontainer">

    <div class="toprow">
        <div class="leftcol widthmorethan768">
            <div class="lefttopimage">
                @if (!string.IsNullOrEmpty(img1))
                {
                    <img src="@img1" alt="@img1AltText" />
                }
            </div>
        </div>
        <div class="middlecol">
            <div class="lefttopimage widthlesstha768">
                @if (!string.IsNullOrEmpty(img1))
                {
                    <img src="@img1" alt="@img1AltText" />
                }
            </div>
        </div>
        <div class="rightcol widthmorethan768">
        </div>
    </div>
    <div class="middlerow">
        <div class="leftcol widthmorethan768">
            <div class="chheading">
            </div>
        </div>
        <div class="middlecol">
            <div class="chheading">
                <h2>@Model.value.Heading</h2>
            </div>
            <div class="righttopimage widthlesstha768">
                @if (!string.IsNullOrEmpty(img2))
                {
                    <img src="@img2" alt="@img2AltText" />
                }
            </div>
        </div>
        <div class="rightcol widthmorethan768">
            <div class="chheading">
                <div class="righttopimage">
                    @if (!string.IsNullOrEmpty(img2))
                    {
                        <img src="@img2" alt="@img2AltText" />
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="bottomrow">
        <div class="leftcol widthmorethan768">
            <div class="leftbottomimage">
                @if (!string.IsNullOrEmpty(img3))
                {
                    <img src="@img3" alt="@img3AltText" />
                }
            </div>
        </div>
        <div class="middlecol">
            <div class="leftbottomimage widthlesstha768">
                @if (!string.IsNullOrEmpty(img3))
                {
                    <img src="@img3" alt="@img3AltText" />
                }
            </div>
        </div>
        <div class="rightcol widthmorethan768">
        </div>
    </div>

</div>
<div class="clear"></div>
